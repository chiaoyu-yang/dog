<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="6000dp"
        android:layout_height="6000dp"
        app:srcCompat="@drawable/item_background" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="設定"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_size" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_pick_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:src="@drawable/_1"
        app:shapeAppearanceOverlay="@style/circular" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/back_start"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"/>


    <EditText
        android:id="@+id/editNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pick_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/line1"
        android:gravity="center"
        android:hint="nickname"
        android:maxEms="10"
        android:maxLines="1"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/iv_pick_image"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/editNickname"
        android:background="#F1FAEE"
        android:src="@drawable/edit"
        tools:visibility="invisible" />
    <TextView
        android:id="@+id/bgmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNickname"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:text="背景音樂"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/bg_seekbar"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editNickname"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="90dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:progress="30"
        android:progressDrawable="@drawable/bg_custom_seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/pawbar" />

    <SeekBar
        android:id="@+id/game_seekbar"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editNickname"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="140dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:progress="30"
        android:progressDrawable="@drawable/bg_custom_seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/pawbar" />

    <TextView
        android:id="@+id/gamemusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNickname"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:text="遊戲音樂"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>



    <ImageButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout"
        android:background="@android:color/transparent"
        android:layout_below="@id/back"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="250dp"
        />





</RelativeLayout>