<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/寶典"
        android:textColor="@color/text_color"
        android:textSize="18dp"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:id="@+id/bar"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <EditText
            android:id="@+id/searchbar"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_1"
            android:elevation="400dp"
            android:hint="@string/狗狗品種"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/searchbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_2" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="0.1dp"
                android:src="@drawable/search"
                android:contentDescription="TODO" />

        </FrameLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_frame"
                    android:padding="2dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/top1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        card_view:cardCornerRadius="25dp"
                        card_view:cardElevation="0dp"
                        card_view:cardBackgroundColor="#A7B1A4">

                        <ImageView
                            android:id="@+id/top1_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/error_image" />

                        <ImageView
                            android:id="@+id/top1_crown"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            app:srcCompat="@drawable/top1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:background="#E4EFD7"
                                android:elevation="1dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/top1_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="第一名"
                                    android:textColor="@color/black"
                                    android:gravity="center"/>
                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/top23"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_frame_small"
                        android:padding="2dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/top2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="false"
                            card_view:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/top2_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/error_image" />

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="25dp"
                                android:layout_height="19dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="8dp"
                                app:srcCompat="@drawable/top2" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="#E4EFD7"
                                    android:elevation="1dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/top2_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="第二名"
                                        android:textColor="@color/black"
                                        android:gravity="center"/>
                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_frame_small"
                        android:padding="2dp"
                        android:layout_marginTop="7dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/top3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="false"
                            card_view:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/top3_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/error_image" />

                            <ImageView
                                android:id="@+id/top3_crown"
                                android:layout_width="25dp"
                                android:layout_height="19dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="8dp"
                                app:srcCompat="@drawable/top3" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="#E4EFD7"
                                    android:elevation="1dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/top3_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="第三名"
                                        android:textColor="@color/black"
                                        android:gravity="center"/>
                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/top123"
                android:id="@+id/recview"/>

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-53dp"
                android:gravity="center"
                android:text="Loading..."
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
