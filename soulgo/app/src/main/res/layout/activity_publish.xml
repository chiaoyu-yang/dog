<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/myusername"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="玩家"
            android:textSize="0dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="發佈"
            android:textColor="@color/text_color"
            android:textSize="@dimen/title_size" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/back_start"
            android:layout_marginTop="30dp"
            android:background="@drawable/back" />

        <ImageButton
            android:id="@+id/circle_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/background_color"
            android:src="@drawable/circle_help"
            android:padding="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/clickToUploadImg"
            android:layout_width="380dp"
            android:layout_height="278dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:scaleX="0.85"
            android:scaleY="0.85"
            app:shapeAppearanceOverlay="@style/RoundedCornerImageView"
            />


        <FrameLayout
            android:id="@+id/ic_outline_add_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/ic_outline_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/clickToUploadImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:src="@drawable/publish_2" />

        </FrameLayout>

        <TextView
            android:id="@+id/upload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="上傳圖片"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:textColor="@color/lightgrey"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clickToUploadImg"
            android:layout_centerHorizontal="true"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:id="@+id/bar1">

            <EditText
                android:id="@+id/upload_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/publish_3"
                android:paddingStart="10dp"
                android:hint="標題"
                android:textColor="#AAAAAA"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:text="0/10"
                android:textSize="14dp"
                android:textColor="#AAAAAA" />

        </FrameLayout>




        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar1"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:id="@+id/bar2">

            <EditText
                android:id="@+id/upload_content_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/publish_4"
                android:gravity="top|start"
                android:hint="內文"
                android:inputType="textMultiLine"
                android:lines="6"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="#AAAAAA"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textViewOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:textSize="14dp"
                android:textColor="#AAAAAA"
                android:layout_gravity="bottom|end"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible" />

        </FrameLayout>


        <ImageButton
            android:id="@+id/btnUpload"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/publish_5"
            android:scaleType="fitCenter"
            android:scaleX="0.85"
            android:scaleY="1"
            android:background="@android:color/transparent"
            android:onClick="uploadData"
            />

        <ImageView
            android:id="@+id/ic_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/noise1"
            android:scaleX="0.9"
            android:scaleY="0.9" />
    </RelativeLayout>
</ScrollView>
