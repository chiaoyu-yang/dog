<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".uploadImage"
    >


    <TextView
        android:id='@+id/myusername'
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="玩家"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="發布"
        android:textSize="15sp"
        android:textColor="@color/text_color"/>

    <ImageButton
        android:id="@+id/to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/upload_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/upload_rectangle"
        android:scaleX="0.9"
        android:scaleY="0.9"/>

    <FrameLayout
        android:id="@+id/ic_outline_add_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/ic_outline_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_add"
            android:background="@android:color/transparent"
            android:layout_above="@id/upload_rectangle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="0dp"
            android:scaleX="0.4"
            android:scaleY="0.4"/>

    </FrameLayout>


    <TextView
        android:id='@+id/upload'
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="上傳圖片"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/setting"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:textColor="@color/lightgrey"
        tools:ignore="MissingConstraints"
        />

    <ImageView
        android:id="@+id/upload_title_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_rectangle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/upload_title_rec"
        android:scaleX="0.9"
        android:scaleY="0.9"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="標題"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/upload"
        android:textColor="@color/lightgrey"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/10"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/upload"
        android:textColor="@color/lightgrey"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:id="@+id/upload_content_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_title_rec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/upload_content_rec"
        android:scaleX="0.9"
        android:scaleY="0.9"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="內文"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/title"
        android:textColor="@color/lightgrey"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/25"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/text"
        android:textColor="@color/lightgrey"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="70dp"/>


    <ImageButton
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_content_rec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/upload_button"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ic_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_content_rec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/noise1"
        android:scaleX="0.9"
        android:scaleY="0.9"/>


</RelativeLayout>